{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2021",
    "lib": ["es2021"],
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "paths": {
      "graphql-config": ["./src/index.ts"]
    }
  },
  "exclude": [],
  "include": ["src"]
}
