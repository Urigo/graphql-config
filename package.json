{
  "name": "graphql-config",
  "version": "4.5.0",
  "description": "The easiest way to configure your development environment with your GraphQL schema (supported by most tools, editors & IDEs)",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typings": "dist/typings/index.d.ts",
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "postinstall": "tsx scripts/patch-graphql.ts",
    "prepublishOnly": "yarn build",
    "clean": "rimraf dist",
    "prebuild": "yarn clean && yarn json-schema",
    "postbuild": "tsx scripts/postbuild.ts",
    "build": "bob build",
    "prettier": "prettier --cache --write --list-different .",
    "prettier:check": "prettier --cache --check .",
    "lint": "eslint --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore .",
    "ci:lint": "eslint --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore . --output-file eslint_report.json --format json",
    "test": "vitest .",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "json-schema": "typescript-json-schema src/types.ts IGraphQLConfig --out config-schema.json --ignoreErrors --required --titles && prettier --write config-schema.json"
  },
  "peerDependencies": {
    "cosmiconfig-toml-loader": "^1.0.0",
    "graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0 || ^15.0.0 || ^16.0.0"
  },
  "peerDependenciesMeta": {
    "cosmiconfig-toml-loader": {
      "optional": true
    }
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.3.7",
    "@graphql-tools/json-file-loader": "^7.3.7",
    "@graphql-tools/load": "^7.5.5",
    "@graphql-tools/merge": "^8.2.6",
    "@graphql-tools/url-loader": "^7.9.7",
    "@graphql-tools/utils": "^9.0.0",
    "cosmiconfig": "8.1.0",
    "jiti": "1.17.1",
    "minimatch": "4.2.3",
    "string-env-interpolation": "1.0.1",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@types/node": "18.14.6",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "bob-the-bundler": "5.0.1",
    "cosmiconfig-toml-loader": "1.0.0",
    "del": "6.1.1",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.7.0",
    "graphql": "16.6.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.2",
    "make-dir": "3.1.0",
    "parent-module": "2.0.0",
    "prettier": "2.8.4",
    "rimraf": "4.3.1",
    "ts-node": "10.9.1",
    "tsx": "3.12.3",
    "typescript": "4.9.5",
    "typescript-json-schema": "0.55.0",
    "vitest": "0.29.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamilkisiela/graphql-config.git"
  },
  "homepage": "https://graphql-config.com",
  "keywords": [
    "graphql",
    "config",
    "relay",
    "apollo"
  ],
  "author": {
    "email": "kamil.kisiela@gmail.com",
    "name": "Kamil Kisiela",
    "url": "https://github.com/kamilkisiela"
  },
  "license": "MIT",
  "bob": {
    "build": {
      "copy": [
        "config-schema.json"
      ]
    }
  },
  "lint-staged": {
    "{src,test}/**/*": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">= 10.0.0"
  }
}
